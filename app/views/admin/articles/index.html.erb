<% 'Artitles' %>
<%= render "sub_menu" %>
<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Published</th>
    <th>Created At</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.name, admin_article_path(article) %></td>
        <td><%= article.published %></td>
        <td><%= article.created_at.strftime('%Y-%m-%d') %></td>
        <td>
            <%= link_to 'Edit', edit_admin_article_path(article) %> | 
            <%= link_to "Destroy", [:admin, article], :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @articles %>
